package org.example.softwaredevelopmentproject.reviews.repositories;

import org.example.softwaredevelopmentproject.user.models.User;
import org.example.softwaredevelopmentproject.reviews.models.Review;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

import java.util.List;

@Repository
public interface ReviewRepository extends JpaRepository<Review, Long> {


    List<Review> findAllByUsername(User username);

    List<Review> findAllByRole(String role);

}
